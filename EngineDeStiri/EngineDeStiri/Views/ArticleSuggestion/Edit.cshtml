@model EngineDeStiri.Models.ApplicationUser

@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>
<form method="post" action="/ArticleSuggestion/Edit/@ViewBag.ArticleSuggestion.ArticleSuggestionId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <label>Title</label>
    <br />
    <input type="text" name="Title" value="@ViewBag.ArticleSuggestion.Title" />
    <br /><br />
    <label>Date</label>
    <br />
    <input type="text" name="Date" value="@ViewBag.ArticleSuggestion.Date" />
    <br /><br />
    <label>Content</label>
    <br />
    <input type="text" name="Content" value="@ViewBag.ArticleSuggestion.Content" />
    <br />
    <button type="submit">Modify</button>
</form>

@Html.Action("AddCategory", "ArticleSuggestion", new { id = ViewBag.ArticleSuggestion.ArticleSuggestionId })