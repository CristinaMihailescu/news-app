@model EngineDeStiri.Models.ApplicationUser

@{
    ViewBag.Title = "Show article";
}
<h1>@ViewBag.Article.Title</h1>
<p>@ViewBag.Article.Date</p>
<!-- A ROUND ViewBag.Article.Author.Username</p> --><p>
<p>@ViewBag.Article.Thumbnail</p>
